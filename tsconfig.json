{
    "include": [
        "./src/**/*"
    ],
    "typeRoots": [
        "node_modules/@types", // Default
        "src/types" // If your .d.ts file is in a different location
      ],
    "compilerOptions": {
        "strict": false,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "paths": {
            "react": ["./node_modules/@types/react"]
          },
        "jsx": "react-jsx",
        "resolveJsonModule": true,

    },

}